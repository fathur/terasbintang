    body
        .container.mbot-20.mtop-20.hidden-xs#head-top
            .row
                .col-md-4
                    a(href='index.html')
                        img(src="/img/logo.png")
                .col-md-8
        .container#header-menu
            //- Class navbar-default harus diganti dengan navbar-terasbintang
            nav.navbar.navbar-teras.navbar-static
                .navbar-header
                    button.navbar-toggle.collapsed(type='button' data-toggle='collapse' data-target='#navbar' aria-expanded='false' aria-controls='navbar')
                        span.sr-only Toggle navigation
                        span.icon-bar
                        span.icon-bar
                        span.icon-bar
                    // a.navbar-brand(href='#') Teras Bintang
                .navbar-collapse.collapse#navbar
                    ul.nav.navbar-nav
                        //- Loop menu
                        each val, i in ['Berita','Hiburan','Bintang','Gaya Hidup', 'Tips','Video']
                            if i == 0
                                li.active
                                    a(href='#')= val
                            else
                                li
                                    a(href='#')= val

                    ul.nav.navbar-nav.navbar-right.search
                        form(method='get' action='search.html')
                            .form-group.has-feedback
                                input.form-control(name='s' id='search'
                                    aria-describedby='search-text'
                                    placeholder='Search')
                                .glyphicon.glyphicon-search.form-control-feedback(aria-hidden='true')
                                #search-text.sr-only Search


